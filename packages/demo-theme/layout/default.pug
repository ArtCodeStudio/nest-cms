html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='stylesheet', type='text/css', href='/main.css')
    link(rel="apple-touch-icon", sizes="180x180", href="/favicons/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="32x32", href="/favicons/favicon-32x32.png")
    link(rel="icon" type="image/png", sizes="16x16", href="/favicons/favicon-16x16.png")
    link(rel="manifest", href="/favicons/site.webmanifest")
    title= meta.title
  body
    div
      rv-sidebar-toggler
      bs4-sidebar#right-sidebar(container-selector="#sidebar-container" position="right")
        .d-flex.justify-content-center(rv-show="isActive" rv-on-click="hide")
          bs4-icon(src="/iconset/svg/icon_close.svg" size="32")
        .text-center Hello from sidebar!
      bs4-toggle-button(target-id="right-sidebar")
        bs4-icon(src="/iconset/svg/icon_close.svg" size="32" rv-show="isActive" rv-on-click="toggle")
        bs4-icon(src="/iconset/svg/icon_menu.svg" size="32" rv-hide="isActive" rv-on-click="toggle")
      #sidebar-container.container-fluid
        .row.d-flex.flex-nowrap
          .col.py-3(rv-view='{"listenAllLinks": true, "datasetToModel": true}' id="main")
            .container(data-namespace=router.namespace)
              block content
    script(src='/vendors.bundle.js')
    script(src='/main.bundle.js')